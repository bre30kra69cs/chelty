{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "build",
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["packages", "services"],
  "exclude": ["node_modules"]
}
