{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
